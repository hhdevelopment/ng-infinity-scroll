<!DOCTYPE html>
<html ng-app="app">
	<head>
		<meta charset="UTF-8">
		<title>Demo int selector App</title>
	</head>
	<body ng-controller="AppCtrl as ctrl">
		<div class="container-fluid">
			<div class="page-header">
				<h1>Infinity-scroll Demo</h1>
			</div>
			<div class="row">
				<div class="col-xs-4">
					<div class="list-group">
						<a href="#" class="list-group-item" ng-repeat="cat in ctrl.categories" 
							ng-click="ctrl.selectCategory(cat)"
							ng-class="{active:ctrl.selectedCategory === cat}">
							<span class="glyphicon glyphicon-folder-close" ng-class="{'glyphicon-folder-open':ctrl.selectedCategory === cat}"></span>&nbsp;&nbsp;
							<span ng-bind="cat.name"></span>
							<span class="badge" ng-bind="cat.nb"></span>
						</a>
					</div>			
				</div>
				<div class="col-xs-8">
					<input type="number" class="form-control input-lg" placeholder="Text input" ng-model="ctrl.height">
					<infinity-scroll scrollbar-size="12" show-info-delay="2000" total="ctrl.items.length" 
										  ng-begin="begin" ng-limit="limit" height="ctrl.height"
										  tag-items="tr"
										  style="border:solid 1px black">
						<table class="table table-hover table-striped">
							<thead>
								<tr>
									<th style="width:30px">First</th>
									<th style="width:20px">2e</th>
									<th>Third</th>
									<th>Fourth</th>
									<th style="width:50px">Last</th>
									<th style="width:20px"></th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="item in ctrl.items| limitTo:limit:begin">
									<td ng-bind="item" ng-style="{height:!$index&&!begin?80:none}"></td><td><span class="glyphicon glyphicon-user"></span></td><td>Mark</td><td>Otto</td><td>@mdo</td><td><span class="glyphicon glyphicon-adjust"></span></td>
								</tr>
							</tbody>
						</table>
					</infinity-scroll>
				</div>
			</div>
		</div>
	</body>
</html>

