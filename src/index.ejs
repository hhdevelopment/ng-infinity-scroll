<!DOCTYPE html>
<html ng-app="app">
	<head>
		<meta charset="UTF-8">
		<title>Demo int selector App</title>
	</head>
	<body ng-controller="AppCtrl as ctrl">
		<div class="container-fluid">
			<div class="page-header">
				<h1>Infinity-scroll Demo</h1>
			</div>
			<infinity-scroll width="17" show-info-delay="2000" total="ctrl.items.length" ng-begin="ctrl.begin" ng-limit="ctrl.limit" 
								  style="border:solid 1px black; height: 300px">
				<table class="table table-hover table-striped">
					<thead>
						<tr>
							<th style="width:30px">First</th>
							<th style="width:20px">2e</th>
							<th>Third</th>
							<th>Fourth</th>
							<th style="width:50px">Last</th>
							<th style="width:20px"></th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="item in ctrl.items | limitTo:ctrl.limit:ctrl.begin">
							<td ng-bind="item"></td><td><span class="glyphicon glyphicon-user"></span></td><td>Mark</td><td>Otto</td><td>@mdo</td><td><span class="glyphicon glyphicon-adjust"></span></td>
						</tr>
					</tbody>
				</table>
			</infinity-scroll>
		</div>
	</body>
</html>

